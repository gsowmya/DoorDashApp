<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/imgCoverUrlLayout"
        android:layout_width="100dp"
        android:layout_height="100dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCoverUrl" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRestaurantName"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_margin"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:paddingRight="15dp"
        android:text="Name"
        android:layout_toRightOf="@+id/imgCoverUrlLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRestaurantDescription"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txtRestaurantName"
        android:layout_toRightOf="@id/imgCoverUrlLayout"
        android:text = "Description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtRestaurantDescription"
        android:layout_alignParentRight="true"
        android:text="22 Mins"
        android:id="@+id/txtStatus" />



</RelativeLayout>
